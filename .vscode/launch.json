    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 4200,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Chrome proba",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"
        },
        {
          "name": "Chrome sin seguridad",
          "type": "chrome",
          "request": "launch",
          "url": "http://localhost:4200",
          "webRoot": "${workspaceRoot}",
          "runtimeArgs": [
            "--disable-web-security"
          ]
        }
    ]
}
